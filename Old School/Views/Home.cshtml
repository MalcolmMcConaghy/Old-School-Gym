@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using Umbraco.Core.Models;
@using Umbraco.Web;

@{
    Layout = "_Layout.cshtml";

    var jumboImage = Umbraco.TypedMedia(Model.Content.GetPropertyValue("jumbotronImage"));
}

<div class="jumboImage" style="background-image: url(@jumboImage.GetPropertyValue("umbracoFile"))">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 jumboText">
                @Model.Content.GetPropertyValue("jumbotronText")
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 jumboTagline">
                @Model.Content.GetPropertyValue("jumbotronTagline")
            </div>
        </div>
    </div>
</div>
<div class="aboutSection">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-8">
                <div class="row">
                    <div class="col-xs-12 aboutTitle">
                        @Model.Content.GetPropertyValue("header")
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 aboutContent">
                        @Model.Content.GetPropertyValue("description")
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 pull-right">
                <div class="row">
                    <div class="col-xs-12 aboutTitle">
                        Facebook
                    </div>
                </div>
                <div class="row">
                    <div class="fb-page col-xs-12">
                        <iframe src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2FOldSchoolGymBallymoney%2F%3Ffref%3Dts&tabs=timeline&width=340&height=500&small_header=true&adapt_container_width=true&hide_cover=false&show_facepile=false&appId=79871647585" style="border:none; overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="tileSection">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-4">
                <div class="row">
                    <div class="col-xs-12 tileHeader">
                        <a href="#">Gym</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 tileImage">
                        <a href="#"><img src="~/images/weights-1677219_1920.jpg"/></a>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="row">
                    <div class="col-xs-12 tileHeader">
                        <a href="#">Trainers</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 tileImage">
                        <a href="#"><img src="~/images/fitness-1730325_1920.jpg" /></a>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="row">
                    <div class="col-xs-12 tileHeader">
                        <a href="#">Membership</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 tileImage">
                        <a href="#"><img src="~/images/kettlebell-1045067_1920.jpg" /></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="contactSection">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8">
                <div class="row">
                    <div class="contactHeader col-xs-12">
                        Contact Us
                    </div>
                </div>
                <div class="row">
                    <form class="col-xs-12 contactForm">
                        <div class="row">
                            <div class="form-group col-xs-12 col-sm-6">
                                <label for="Name">Name</label>
                                <input type="text" class="form-control" id="name" placeholder="Name" name="name">
                            </div>
                            <div class="form-group col-xs-12 col-sm-6">
                                <label for="Email">Email</label>
                                <input type="email" class="form-control" id="email" placeholder="Email" name="email">
                            </div>
                            <div class="form-group col-xs-12">
                                <label for="message">Message</label>
                                <textarea class="form-control" rows="3" placeholder="Please type your message here" name="message"></textarea>
                            </div>
                            <div class="col-xs-4 submit">
                                <button type="submit" class="btn btn-default submitBtn">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-xs-12 col-sm-4 pull-right">
                <div class="row">
                    <div class="contactHeader col-xs-12">
                        Find Us
                    </div>
                </div>
                <div class="row">
                    <div class="map col-xs-12">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2284.488492642183!2d-6.516156784095878!3d55.06969578037616!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x486030dc95a9f783%3A0xe450e68f753a90ff!2sOld+School+Gym!5e0!3m2!1sen!2suk!4v1476708617747" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>